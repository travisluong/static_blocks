<h1 class="pull-left">Showing Snippet</h1>

<%= link_to 'Edit', edit_snippet_path(@snippet), class: "btn btn-primary btn-warning pull-right showing-edit-button" %>

<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Status</th>
  </tr>
  <tr>
    <td><%= @snippet.title %></td>
    <td width="20%"><%= @snippet.status %></td>
  </tr>
</table>

<div class="well">
  <%= raw(@snippet.content) %>
</div>
